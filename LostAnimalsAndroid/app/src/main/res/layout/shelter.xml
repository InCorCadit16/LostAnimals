<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_margin="5dp"
    android:background="@drawable/post_background">

    <RelativeLayout
        android:id="@+id/general_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/shelter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="22sp"
            android:text="Dog house"
            android:layout_toStartOf="@id/shelter_image"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/shelter_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shelter_name"
            android:textColor="#000"
            android:layout_toStartOf="@id/shelter_image"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="This shelter was found in 1995. It holds around 80 pets."
            />

        <ImageView
            android:id="@+id/shelter_image"
            android:background="@color/colorAccent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/map_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_background"
        android:scaleType="fitCenter"
        android:src="@drawable/map"
        android:layout_below="@id/general_info"/>

</RelativeLayout>